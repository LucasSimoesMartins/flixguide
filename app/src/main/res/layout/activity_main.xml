<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentInsetStart="@dimen/toolbar_content_inset_start"
        app:layout_scrollFlags="scroll|enterAlways|snap">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtMovies"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/rocko_flf"
                android:text="@string/movies"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/toolbar_text" />

            <TextView
                android:id="@+id/txtSeries"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/rocko_flf"
                android:text="@string/series"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/toolbar_text" />

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

</com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgMostPopular"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_most_popular_height"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/breaking_bad"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/auto_height"
                android:background="@drawable/gradient_top"
                app:layout_constraintBottom_toBottomOf="@id/imgMostPopular"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/auto_height"
                android:background="@drawable/gradient_bottom"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/imgMostPopular"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>